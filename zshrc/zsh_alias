# alias
# for update and upgrade
alias update='sh ~/environment/update.sh'
# for ls
alias ls='ls --color=auto'
alias l='ls'
alias la='ls -a'
alias ll='ls -l'
# for vim
alias vi='vim'
alias vv='vim ~/.vimrc'
# for zsh
alias vz='vim ~/.zshrc'
alias vzh='vim ~/.zsh_history'
alias vza='vim ~/dotfiles/zshrc/zsh_alias'
alias sz='source ~/.zshrc'
# for ideavim
alias viv='vim ~/.ideavimrc'
alias siv='source ~/.ideavimrc'
# for shutdown
alias reboot='sudo reboot'
alias shutdown='sudo shutdown -h now'
# for compile
alias clang='clang -Wall'
alias clang++='clang++ -Wall'
alias gcc='gcc -Wall'
alias g++='g++ -Wall'
# alse
alias t='tree -a'
alias c='clear'
